
@font-face {
  font-family: "iconfont";
  
  src: url('data:application/x-font-woff;charset=utf-8;base64,') format('woff');
  
}

.iconfont {
  font-family:"iconfont" !important;
  font-size:32px;
  font-style:normal;
  vertical-align:middle;
  -webkit-font-smoothing: antialiased;
  -moz-osx-font-smoothing: grayscale;
}

.icon-fanhui, .icon-shouye{
  font-size:24px;
  width:32px;
  height: 32px;
  line-height:32px;
  font-weight:800;
}

.icon-shouye{
  margin-left: 12px;
}

.icon-fanhui:before { content: "\e61f"; }

.icon-shouye:before { content: "\e68a";}

.divider{
  align-self:center;width:1px;background-color:#999;height:18px;
}

.navbar {
  width: 100vw;
  position: fixed;
  z-index: 4;
}

.title-container {
  height: 44px;
  display: flex;
  align-items: center;
  position: relative;
}

.capsule {
  box-sizing: border-box;
  width:80px;
  margin-left: 10px;
  height: 32px;
  border: 0rpx solid #666; 
  border-radius: 16px;
  display: flex;
  align-items: center;
}



.title {
  color: white;
  position: absolute;
  left: 104px;
  right: 104px;
  font-size: 16px;
  text-align: center;
  overflow: hidden;
  text-overflow: ellipsis;
  white-space: nowrap;
}